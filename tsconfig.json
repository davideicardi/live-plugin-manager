{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",

    "strict": true,
    "noUnusedLocals": true,

    "sourceMap": true,
    "declaration": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "samples/plugins",
    "test/plugins",
    "node_modules",
    "plugin_packages",
    "**/*.d.ts"
  ]
}