{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": true,
    "types": [
      "debug",
      "fs-extra",
      "lockfile",
      "semver",
      "tar",
      "url-join",
      "node-fetch"
    ]
  },
  "exclude": [
    "samples/plugins",
    "test/plugins",
    "node_modules",
    "plugin_packages",
    "**/*.d.ts"
  ]
}
