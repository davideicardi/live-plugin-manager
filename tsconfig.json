{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "lib",
    "types": [
      "chai",
      "debug",
      "fs-extra",
      "lockfile",
      "mocha",
      "node",
      "node-fetch",
      "semver",
      "tar",
      "url-join"
    ]
  },
  "exclude": [
    "samples",
    "test",
    "node_modules",
    "plugin_packages",
    "**/*.d.ts"
  ]
}
